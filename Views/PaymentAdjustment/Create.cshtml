@model ams.Models.PaymentAdjustment

@{
    ViewBag.Title = "Create";
}
<link href="~/Content/css/jquery-ui.css"  rel="Stylesheet" type="text/css"/>
<h2>Payment Adjustments</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend></legend>

        <style>
            tr {
                padding-bottom:50px;
            }
        </style>
        <table>
            <tr>
                <th style="width:80px;"></th>
            </tr>
            <tr>
                <td>
                    @Html.Label("Customer") 
                </td>
                <td>
                    <input type="text" id="txtCustomer" name="Customer"/>
                    &nbsp;OR&nbsp;
                    @Html.Label("Supplier")
                    <input type="text" id="txtSupplier" name="Supplier"/>
                    <input type="hidden" id="Fkey" name="CusSupID" value="0" />
                </td>
            </tr>
            <tr style="height:10px;"></tr>
            <tr>
                <td>
                    @Html.Label("Balance") 
                </td>
                <td>
                    <input readonly="true" name="Balance" id="Balance" value="@ViewBag.Balance" />
                </td>
            </tr>
            <tr style="height:10px;"></tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Amount) 
                </td>
                <td>
                        
                    @Html.EditorFor(model => model.Amount)
                    @Html.ValidationMessageFor(model => model.Amount)
                </td>
            </tr>
            <tr style="height:10px;"></tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Remarks) 
                </td>
                <td>
                        
                    @Html.TextAreaFor(model => model.Remarks)
                    @Html.ValidationMessageFor(model => model.Remarks)
                </td>
            </tr>
        </table>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    <script src="~/Scripts/jquery-1.10.0.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery-ui.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            //alert();

            // Customer
            $("#txtCustomer").autocomplete({
                source: function (request, response) {
                    $.ajax({
                        url: '/Invoice/SearchCustomer/',
                        data: { term: request.term },
                        type: "POST",
                        dataType: "json",
                        success: function (data) {
                            response($.map(data, function (item) {
                                return item;
                            }))
                        },
                        error: function (response) {
                            alert(response.responseText);
                        },
                        failure: function (response) {
                            alert(response.responseText);
                        }
                    });
                },
                select: function (e, i) {
                    $("#txtSupplier").val("");
                    // Get Balance
                    $.ajax({
                        type: "POST",
                        url: '/PaymentAdjustment/GetCustomerBalance/',
                        content: "application/json; charset=utf-8",
                        dataType: "json",
                        data: { CustomerID: i.item.val },
                        success: function (msg) {
                            $('#Balance').val(msg);
                        },
                        error: function (xhr, textStatus, errorThrown) {
                            // TODO: Show error
                        }
                    });
                    // Get Balance
                    $("#Fkey").val(i.item.val);
                },
                minLength: 1
            });

            // Supplier
            $("#txtSupplier").autocomplete({
                source: function (request, response) {
                    $.ajax({
                        url: '/PaymentAdjustment/SearchSupplier/',
                        data: { term: request.term },
                        type: "POST",
                        dataType: "json",
                        success: function (data) {
                            response($.map(data, function (item) {
                                return item;
                            }))
                        },
                        error: function (response) {
                            alert(response.responseText);
                        },
                        failure: function (response) {
                            alert(response.responseText);
                        }
                    });
                },
                select: function (e, i) {
                    $("#txtCustomer").val("");
                    $("#Fkey").val(i.item.val);
                },
                minLength: 1
            });

        });
    </script>
}
